
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default to denying all access unless explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // USER PROFILES
    // A user can only be created if the request is authenticated and the UID matches.
    // ANY authenticated user can read the list of users (for chat).
    match /users/{userId} {
      allow list, get: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // CHATS
    match /chats/{chatId} {
      // A user can list/read chats only if they are a participant.
      allow list, get: if request.auth.uid in resource.data.participants;
      // A user can create a chat if they are one of the participants in the new chat document.
      allow create: if request.auth.uid in request.resource.data.participants;
      
      // MESSAGES SUBCOLLECTION
      match /messages/{messageId} {
        // A user can read/write messages only if they are a participant in the parent chat.
        allow read, write: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}
