
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to create their own user document
    // The `userId` is the ID of the document they are trying to create.
    match /seller_users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can read/update/delete any seller
      allow read, update, delete: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists() == true;
    }

    // Allow admins to access the 'admins' collection
    match /admins/{adminId} {
      allow read, write: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Rules for orders
    match /orders/{orderId} {
      // Allow any authenticated user to create an order
      allow create: if request.auth != null;
      // Allow admins to read/update/delete any order
      allow read, update, delete: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists() == true;
    }
  }
}
