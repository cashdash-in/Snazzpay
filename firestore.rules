rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow anyone to create a user document (for signup).
      allow create;
      
      // Only the user themselves can read, update or delete their own document.
      allow read, update, delete: if isUser(userId);
      
      // Any authenticated user can list users to populate the chat list.
      allow list: if request.auth != null;
    }

    match /chats/{chatId} {
      function isParticipant() {
        return request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }

      // A user can only see chats they are a participant in.
      allow list: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // A user can get/read a chat if they are a participant.
      allow get: if isParticipant();
      
      // Any authenticated user can create a chat.
      allow create: if request.auth != null;
      
      // A user can only update a chat (e.g., last message) if they are a participant.
      allow update: if isParticipant();

      match /messages/{messageId} {
        // A user can read/write/delete messages if they are a participant in the parent chat.
        allow read, write, delete: if isParticipant();
      }
    }
  }
}
