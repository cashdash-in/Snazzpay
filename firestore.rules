rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    // match /{document=**} {
    //   allow read, write: if false;
    // }

    // Allow authenticated users to read from any collection.
    // This is necessary for the dashboards and various pages to display data.
    match /{path=**}/_ {
      allow read: if request.auth != null;
    }

    // Allow users to create their own user profile document upon signup
    match /seller_users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /vendors/{userId} {
       allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow general read for authenticated users on most collections
    match /orders/{orderId} {
      allow read: if request.auth != null;
    }
    match /leads/{leadId} {
      allow read: if request.auth != null;
    }
    match /user_permissions/{userId} {
      allow read: if request.auth != null;
    }
    match /seller_payment_settings/{userId} {
      allow read: if request.auth != null;
    }
     match /vendor_payment_settings/{userId} {
      allow read: if request.auth != null;
    }
    match /product_drops/{dropId} {
        allow read: if request.auth != null;
    }
     match /seller_products/{productId} {
        allow read: if request.auth != null;
    }
    match /shakti_cards/{cardId} {
        allow read: if request.auth != null;
    }

    // For now, allow any authenticated user to write to any document.
    // This is NOT secure for production, but it will unblock all current issues.
    // We will tighten these rules in subsequent steps.
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}