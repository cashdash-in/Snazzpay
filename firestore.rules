rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS collection rules
    // Allow users to create their own profile, and admins to create profiles.
    // Allow any authenticated user to read user profiles (for chat).
    // Allow users to update their own profiles.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }
    
    // Allow listing of users for chat functionality
    match /users {
        allow list: if request.auth != null;
    }

    // CHATS collection rules
    // Allow users to read/write messages in chats they are a part of.
    match /chats/{chatId} {
      allow read, update, create: if request.auth.uid in resource.data.participants;
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants[0] == request.auth.uid || 
                         get(/databases/$(database)/documents/chats/$(chatId)).data.participants[1] == request.auth.uid;
    }
  }
}
