
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to products, but only admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
    }

    // Secure the seller_users collection
    match /seller_users/{userId} {
      // Allow a user to create their own user document upon signup
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow a user to read their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow only the user themselves or an admin to update their document
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists);
      
      // Only allow admins to delete seller users
      allow delete: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).exists;
    }
    
    // Secure the orders collection
    match /orders/{orderId} {
      // Allow authenticated users to create/update their own orders
      allow write: if request.auth != null;
      // Allow only authenticated users to read orders. More specific rules can be added.
      allow read: if request.auth != null;
    }
    
    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
