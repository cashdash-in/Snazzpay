rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow registered users to read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Public collections that can be read by any authenticated user
    match /orders/{orderId} {
      allow read, list: if request.auth.uid != null;
      allow write: if request.auth.uid != null; // More specific rules might be needed
    }
    
    match /leads/{leadId} {
        allow read, list, write, delete: if request.auth.uid != null;
    }
    
    match /seller_users/{userId} {
        allow read, list: if request.auth.uid != null;
        allow create: if request.auth.uid == userId;
        allow update: if request.auth.uid != null; // Admin can update
    }
    
    match /vendors/{vendorId} {
         allow read, list: if request.auth.uid != null;
         allow create: if request.auth.uid != null;
         allow update: if request.auth.uid != null; // Admin can update
    }
    
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participants;
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // Allow any authenticated user to read from any collection.
    // This is a broad rule for development and should be refined for production.
    match /{document=**} {
      allow get, list: if request.auth.uid != null;
      allow write: if request.auth.uid != null; // Placeholder for more specific rules
    }
  }
}
