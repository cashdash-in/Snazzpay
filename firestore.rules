
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // For the users collection:
    // 1. Any authenticated user can query the collection (for search).
    // 2. A user can get their own document.
    // 3. A user can create their own document on first login.
    // 4. A user can update their own document.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow get, update: if request.auth.uid == userId;
      // Allow querying by any authenticated user for the search functionality
      allow list: if request.auth != null; 
    }

    // For the chats collection:
    // 1. A user can only see chats they are a participant in.
    // 2. A user can only get, create, or update a chat if they are a participant.
    match /chats/{chatId} {
      allow list, get, create, update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Users can read/write messages in chats they are part of.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}

    