rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to LIST chats they are a part of, and READ/UPDATE a specific chat if they are a participant.
    match /chats/{chatId} {
      allow list: if request.auth.uid != null && request.query.where.size() == 1 && request.query.where[0].field == 'participants' && request.query.where[0].op == 'array-contains' && request.query.where[0].value == request.auth.uid;
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid != null;

      // Allow participants to read/write messages within their chat.
      match /messages/{messageId} {
        allow read, write: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }

    // Placeholder rules for other collections.
    // In a real app, you would define specific rules for each collection.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
