
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Secure user-specific data
    match /users/{userId} {
      // Users can create their own profile, and read/write only their own data.
      allow create, read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for chat
    match /chats/{chatId} {
        // A user can get a chat document if they are one of the participants.
        allow get, list: if request.auth != null && resource.data.participants.hasAny([request.auth.uid]);
        
        // A user can create a chat if they are one of the participants.
        allow create: if request.auth != null && request.resource.data.participants.hasAny([request.auth.uid]);

        // A user can update a chat (e.g., last message) if they are a participant.
        allow update: if request.auth != null && resource.data.participants.hasAny([request.auth.uid]);

        // Chat messages
        match /messages/{messageId} {
            // A user can read messages in a chat they are part of.
            allow read: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
            
            // A user can write a message if they are the sender and a participant.
            allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        }
    }
    
    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
