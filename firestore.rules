
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to list and get user profiles for the chat feature.
    // Allow users to update their own profile.
    match /users/{userId} {
      allow list, get: if request.auth != null;
      allow create; // Allow anyone to create their user profile (during signup/first login)
      allow update: if request.auth.uid == userId;
    }

    // Secure the chat collections.
    match /chats/{chatId} {
      // Users can only see/get/create/update chats they are a participant in.
      allow list, get, create, update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Users can only read/write messages in chats they are part of.
        // This is checked by getting the parent chat document and checking the participants array.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
