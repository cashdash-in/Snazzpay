
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow user profile creation by the user themselves, but only allow users to read/update their own profile.
    // ANY authenticated user can see the list of other users (for the chat).
    match /users/{userId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Nobody can delete user profiles
    }

    // Secure the chat collections.
    match /chats/{chatId} {
      // Users can only see the list of chats they are a participant in.
      allow list: if request.auth != null && request.auth.uid in resource.data.participants;

      // Users can only get/create/update a chat if they are a participant.
      allow get, create, update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Users can only read/write messages in chats they are part of.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}
