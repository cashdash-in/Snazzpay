
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to create their own profile in seller_users,
    // but not read or write other users' profiles.
    match /seller_users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      // For now, allow any authenticated user (admin) to update status for approval
      allow update: if request.auth != null; 
    }

    // Allow authenticated users to manage their own orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
