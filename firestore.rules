rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Allow a user to read or update a chat document if they are a participant
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
      // Allow any authenticated user to create a new chat
      allow create: if request.auth != null;

      // Rules for the 'messages' sub-collection within a chat
      match /messages/{messageId} {
        // Allow a user to read, write, and delete messages if they are a participant of the parent chat
        allow read, write, delete: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
