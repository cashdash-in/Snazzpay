rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads/writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Secure the users collection
    match /users/{userId} {
      // ANY authenticated user can get the list of users (for chat).
      allow list, get: if request.auth != null;

      // ANYONE can create a user document. This is required for signup.
      // Security is maintained because they cannot read/update other users' documents.
      allow create;

      // A user can only update their own document.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Nobody can delete user profiles.
      allow delete: if false;
    }

    // Secure the chat collections.
    match /chats/{chatId} {
      // A user must be a participant to get or list chats.
      allow get, list: if request.auth != null && request.auth.uid in resource.data.participants;

      // A user must be a participant to create or update a chat.
      allow create, update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Users can only read/write messages in chats they are part of.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}
