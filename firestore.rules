rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to get the list of users for chat.
      allow get, list: if request.auth != null;
      // Allow a user to create or update their own user document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /chats/{chatId} {
      // Allow a user to list only the chats they are a participant in.
      allow list: if request.auth != null && request.auth.uid in resource.data.participants;
      // Allow a user to read or update a chat document if they are a participant.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
      // Allow any authenticated user to create a chat.
      allow create: if request.auth != null;

      match /messages/{messageId} {
        // Allow users to read, write, and delete messages only in chats they are a part of.
        allow read, write, delete: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
