rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to create their own registration document
    match /seller_users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can read/write all
      allow read, update, delete: if false; // To be defined by admin rules
    }
    
    match /vendors/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can read/write all
      allow read, update, delete: if false; // To be defined by admin rules
    }

    // Other rules should be defined below. For now, deny all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
